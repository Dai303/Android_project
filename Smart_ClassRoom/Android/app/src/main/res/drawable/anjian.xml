<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <solid android:color="#ff58bb52" />
            <!--设置渐变色 angle=0 从左到右渲染，angle=90从上到下渲染，angle=180 从右到左渲染，-->
            <gradient
                android:angle="0"
                android:startColor="#66CDAA"
                android:endColor="#66CDAA" />
            <!--设置角的弧度-->
            <corners android:radius="16px" />
            <!--设置边框以及弧度-->
            <stroke
                android:color="#000000" />
        </shape>
    </item>

    <item  android:state_pressed="true">
        <shape>
            <!--点击之后的颜色-->
            <solid android:color="#1C86EE"/>
            <!--设置角的弧度-->
            <corners android:radius="10dp"/>
            <!--点击之后的边框-->
            <stroke
                android:width="10dp"
                android:color="#1C86EE"/>
        </shape>
    </item>
</selector>